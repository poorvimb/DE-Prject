<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/in_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contextClickable="true"
    android:background="@color/appBackGround"
    >

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tablelayoutexpense_id3"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/appBackGround"
        android:orientation="vertical"
        android:stretchColumns="1">


        <TableRow
            android:id="@+id/fromdate"
            android:padding="15dp">

            <TextView
                android:id="@+id/selectDateTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Date"
                android:textColor="@color/textColourPrimary"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/monthList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                ></Spinner>


            <Spinner
                android:id="@+id/yearList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="1"

                ></Spinner>


        </TableRow>
    </TableLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tablelayoutexpense_id2"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/appBackGround"
        android:orientation="vertical"
        android:stretchColumns="1"
        android:layout_below="@id/tablelayoutexpense_id3">

        <TableRow android:padding="5dip"
            >

            <Button
                android:id="@+id/sendReport"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_span="2"
                android:text="Send Report"
                android:textColor="#fff"
                android:backgroundTint="@color/buttonColourPrimary"
                />
        </TableRow>

    </TableLayout>



</RelativeLayout>



